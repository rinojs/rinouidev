<d:css>
.button
{
    background-color: #FFFFFF;
    display: inline-block;
    padding: 10px 12px;
    font-size: 1em;
    text-align: center;
    text-decoration: none;
    border-radius: 5px;
    cursor: pointer;
    user-select: none;
    border: none;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.button:hover
{
    background-color: #EEEEEE;
}

.button:active
{
    background-color: #BDBDBD;
}
</d:css>